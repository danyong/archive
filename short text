<!-- Functions short text -->
<?php 
function short_content($num) {
    $limit = $num+1;
    $content = str_split(get_the_content());
    $length = count($content);
    if ($length>=$num) {
        $content = array_slice( $content, 0, $num); 
        $content = implode("",$content)."...";
        echo $content;
    } else {
        the_content();
    }
}
?>
